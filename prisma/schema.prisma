// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  lastName String
  password String
  createdAt        DateTime           @default(now()) 
  userType    UserType    @relation(fields: [userTypeId], references: [id])
  userTypeId Int

  services Service[]
  // payments Payment[]
}



model UserType{

  id Int  @id @default(autoincrement())
  name String @unique
  users User[]
}


model Service {

  id	   String @id @default(cuid())
  
  name String
  lastName String
  phone String
  latitude Float
  longitude	Float
  packageId	Int
  ranchId Int
  serviceStatus ServiceStatus @default(CREATED)

  ip    String?  @unique	
  userId  Int?  
  paymentDay Int?
  stripeContract String ? @unique
  createdAt DateTime @default(now())

  package    InternetPackage    @relation(fields: [packageId], references: [id])
  ranch    Ranch    @relation(fields: [ranchId], references: [id])
  user User?  @relation(fields: [userId], references: [id])

  payments Payment[]

}


model Payment{

  id Int @id @default(autoincrement())
  
  serviceId String
  amount Float
  monthlyPayment DateTime 
  description String
  createdAt DateTime @default(now())
  service Service @relation(fields: [serviceId], references: [id])
  

}



model InternetPackage{

  id Int @id @default(autoincrement())
  name String  @db.VarChar(200)
  price Float
  description String @db.VarChar(400)
  services Service[]  

}


model Ranch {

  id Int @id @default(autoincrement())
  name String
  services  Service[]


}





enum ServiceStatus {
  ONLINE
  OFFLINE
  CREATED
  PAYMENTDUE
}